<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.system.BroadcastTestActivity">

    <Button
        android:id="@+id/btSendStickyBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送粘性广播"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btReceiveStickyBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接收粘性广播"
        app:layout_constraintTop_toBottomOf="@+id/btSendStickyBroadcast" />

    <Button
        android:id="@+id/btRemoveStickyBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除粘性广播"
        app:layout_constraintTop_toBottomOf="@+id/btReceiveStickyBroadcast" />
</androidx.constraintlayout.widget.ConstraintLayout>